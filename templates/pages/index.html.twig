{% extends 'base.html.twig' %}

{% block title %} Articles SymfArt {% endblock %}

{% block body %}
<h1>Articles</h1>
{% if articles %}

	<table  id="articles" class="table table-striped">
		<thead>
			<tr>
				<th>Titre de l' Article</th>
				<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			{% for article in articles %}
			<tr>
				<td>{{ article.title }}</td>
				<td>
					<a href="/article/{{article.id}}" class="btn btn-dark">Afficher</a>
					<a href="/article/edit/{{article.id}}" class="btn btn-light">Editer</a>
					<a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}" >Effacer</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>	
{% else %}	
   <p>Pas d' articles Ã  afficher</p>
{% endif %}  
{% endblock %}

{% block javascripts %}
<script src="/js/main.js"></script>

{% endblock %}